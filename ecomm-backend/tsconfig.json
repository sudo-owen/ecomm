{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "resolveJsonModule": true
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node",
      "transpileOnly": true,
      "files": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}