generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id              Int      @id @default(autoincrement())
  name            String
  price           Float
  description     String
  imageUrl        String
  stock           Int
  category        String
  fullDescription String
  variants        ProductVariant[]
  abConfig        ProductAbConfig[] 
}

model ProductVariant {
  id        Int     @id @default(autoincrement())
  productId Int
  abTestId  Int     
  changes   String  // Store JSON string of changes
  product   Product @relation(fields: [productId], references: [id])

  abTest    AbTest  @relation(fields: [abTestId], references: [id])
}

model ProductAbConfig {
  id          Int     @id @default(autoincrement())
  enabled     Boolean
  productId   Int
  type        String

  product     Product @relation(fields: [productId], references: [id])
  abTests     AbTest[]

  @@unique([productId, type])
}

model AbTest {
  id          Int      @id @default(autoincrement())
  configId    Int
  name        String
  description String
  purchases   Int
  status      String

  productBlob String 

  abConfig    ProductAbConfig @relation(fields: [configId], references: [id])
  variants    ProductVariant[]   // Store JSON array of variant IDs
}
